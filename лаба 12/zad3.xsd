<?xml version="1.0" encoding="UTF-8"?> 
<?xml-stylesheet type="text/css" href="zad3.css"?>
<catalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="zad3.xsd">
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="catalog">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="tovar">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="product" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>

                        <xs:complexType name="product">
                            <xs:sequence>
                                <xs:element name="productName" type="xs:string"/>
                            </xs:sequence>
                            <xs:attribute name="id" type="xs:string" use="required"/>
                        </xs:complexType>


                    <xs:element name="infa">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="opisanie" maxOccurs="unbounded"/>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>

                        <xs:complexType name="opisanie">
                            <xs:sequence>
                                <xs:element name="haracteristica" type="xs:string"/>
                            </xs:sequence>
                            <xs:attribute name="o_id" type="xs:string" use="required"/>
                        </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
</catalog>